<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbg">

    <LinearLayout
        android:id="@+id/ll_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/rlAnswer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageButton
                android:id="@+id/ib_submit_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_send"
                android:background="@drawable/selector_message_send"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvAnswers"
                android:layout_width="match_parent"
                android:scrollbarSize="2dp"
                android:layout_toLeftOf="@id/ib_submit_ans"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <careclues.careclueschat.views.FamilyMemberView
            android:id="@+id/view_familymember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <careclues.careclueschat.views.MessageInputView
            android:id="@+id/view_messageinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/bottom_sheet"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone">

        </FrameLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvChatHistory"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:scrollbarSize="2dp"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_input_layout"
        android:layout_below="@id/nxt"/>
    <Button
        android:id="@+id/nxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next MSG"/>

</RelativeLayout>